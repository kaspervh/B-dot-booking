<div class="content-container">
  <h1>Work Periods</h1>

    <table>
      <thead>
        <tr>
          <th>fra</th>
          <th>til</th>
          <th colspan="3">Optioner</th>
        </tr>
      </thead>

      <tbody>
        <% @work_periods.each do |work_period| %>
          <tr>
            <td><%= work_period.start_time %></td>
            <td><%= work_period.end_time %></td>
            <td><%= link_to 'Vis mine bookninger', company_work_period_path(current_company, work_period), class: 'button' %></td>
            <td><%= link_to 'Slet', company_work_period_path(current_company, work_period), method: :delete, data: { confirm: 'Er du sikker på at du vil slette åbningstiden, hvis du gør dette vil alle dine aftaler også blive slettet.' }, class: 'button' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Ny Åbningstid', new_company_work_period_path(current_company), class: 'button' %>

</div>

