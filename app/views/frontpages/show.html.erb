<div class="frontpage-container">
  <div class="main-image-container">
    <%= image_tag @frontpage.main_image, class: 'main_image'%>
  </div>

  <div class="about-container">
    <div class="about-image">
      <%=image_tag @frontpage.about_image%>
    </div>
    
    <div class="about-description">
      <h2><%= @frontpage.about_header%></h2>
      <p><%= @frontpage.about_text%></p>
    </div>
  </div>

  <div class="footer">
    <p><%= "#{current_company.name} Cvr: #{current_company.cvr} #{current_company.address} #{current_company.zip_code} #{current_company.city} "%></p>
  </div>
</div>

